{
  "version": "3",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next@latest"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node@2"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend"
    }
  ]
}
